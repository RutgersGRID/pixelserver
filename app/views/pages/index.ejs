<!DOCTYPE html>
<html>

<head>
  <title> Pixel </title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

  <link rel="stylesheet" type="text/css" href="/main.bundle.css" media="screen" />
  <link rel="stylesheet" type="text/css" href="/pixelPage.bundle.css" media="screen" />
  <link rel="stylesheet" type="text/css" href="/pixelApp.bundle.css" media="screen" />

  <script src="https://use.fontawesome.com/39ddb2bf02.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet"> 
  <link href="https://fonts.googleapis.com/css?family=Oswald:700" rel="stylesheet">
</head>

<body>
  <div id="overlay">
    <div id="modalWrapper">
      <div id="colorModal">
        <section id="modalHeader">
          <h2 id="modalTitle">Color Picker</h2> <div id="exitModal">X</div>
        </section>
        <section id="colorSelector">
          <p> Select a color to replace: </p>
          <section id="colorPaletteEdit">
            <div class="color e-color-0"></div>  
            <div class="color e-color-1"></div>  
            <div class="color e-color-2"></div>  
            <div class="color e-color-3"></div>  
            <div class="color e-color-4"></div>  
            <div class="color e-color-5"></div>  
            <div class="color e-color-6"></div>  
            <div class="color e-color-7"></div>  
            <div class="color e-color-8"></div>  
            <div class="color e-color-9"></div>  
            <div class="color e-color-10"></div>  
            <div class="color e-color-11"></div>  
          </section>
          <section id="editTools">
            <section id="sliders">
              <div>
                <span class="rangeLabel">R</span>
                <input class="colorRange" id="redRange" type="range" min="0" max="255"></input>
                <input type="text" class="singleInput" id="rInput"></input>
              </div>
              <div> 
                <span class="rangeLabel">G</span>
                <input class="colorRange" id="greenRange" type="range" min="0" max="255"></input>
                <input type="text" class="singleInput" id="gInput"></input>
              </div>
              <div>
                <span class="rangeLabel">B</span>
                <input class="colorRange" id="blueRange" type="range" min="0" max="255"></input>
                <input type="text" class="singleInput" id="bInput"></input>
              </div>
            </section>
            <section id="output">
              <div id="colorResult"></div>
              <p class="colorLabel">RGB</p><input type="text" class="colorInput" id="rgbInput"></input>
              <br/>
              <p class="colorLabel">HEX</p><input type="text" class="colorInput" id="hexInput"></input>
            </section>
          </section>
          <section id="editButtons">
            <div id="cancelButton">Cancel</div>
            <div id="applyButton">Apply</div>
          </section>
        </section>
      </div>
    </div>
  </div>

  <div class="topLayer">
    <header id="appTitle">
      <img src="/img/PixelWallLogo.png" width="42px"/>
      <h1>PXL WALL</h1>
    </header>
    <!--
    <div class="userCounter">
      <img src="/img/iconmonstr-user-7-64.png" width="20px"/>
      <p id="userCount"></p>
    </div>
    -->
  </div>

  <article class="mainContent">
    <section id="view">
      <canvas id="editor" width="50" height="50"></canvas>
    </section>
    <section class="actionsWrapper">
      <section id="colorPalette">
        <div class="color color-0 active"></div>  
        <div class="color color-1"></div>  
        <div class="color color-2"></div>  
        <div class="color color-3"></div>  
        <div class="color color-4"></div>  
        <div class="color color-5"></div>  
        <div class="eraser"></div>  
        <div class="color color-6"></div>  
        <div class="color color-7"></div>  
        <div class="color color-8"></div>  
        <div class="color color-9"></div>  
        <div class="color color-10"></div>  
        <div class="color color-11"></div>  
        <div class="select select-color">
          <img src="/img/plus_icon.png" width="24px" height="24px"/>
        </div>  
      </section>
    </section>
  <article>

  <script type="text/javascript" src="main.bundle.js"></script>
  <script type="text/javascript" src="pixelPage.bundle.js"></script>
  <script type="text/javascript" src="pixelApp.bundle.js"></script>
</body>

</html>
